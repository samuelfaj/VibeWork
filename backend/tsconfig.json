{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@infra/*": ["./src/infra/*"],
      "@modules/*": ["./modules/*"]
    }
  },
  "include": ["src/**/*", "modules/**/*"],
  "exclude": ["node_modules", "dist"]
}
