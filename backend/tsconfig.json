{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@infra": ["./src/infra"],
      "@infra/*": ["./src/infra/*"],
      "@i18n": ["./src/i18n"],
      "@i18n/*": ["./src/i18n/*"],
      "@modules/*": ["./modules/*"]
    }
  },
  "include": [
    "src/**/*",
    "modules/**/*",
    "tests/**/*",
    "seeders/**/*",
    "drizzle.config.ts",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
